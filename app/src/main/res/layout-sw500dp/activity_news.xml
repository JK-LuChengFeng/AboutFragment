<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activity.Activity_News">

    <fragment
        android:id="@+id/fg_title"
        android:name="com.example.aboutfragment.fragment.Fragment_NewsTitle"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>


    <FrameLayout
        android:id="@+id/fm_content"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/fg_content"
            android:name="com.example.aboutfragment.fragment.Fragment_NewsContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

</LinearLayout>